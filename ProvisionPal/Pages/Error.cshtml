@page "/Error/{Reason}"
@{
    
}

<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4" src="/img/logo.png" alt="" width="72">
    <h1 class="display-5 fw-bold">An unknown error occured.</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">An error occured on the last action.</p>
    </div>
</div>

<div class="card col-8 m-auto">
    <div class="card-body">
        <h5 class="card-title"><b>Reason:</b> @Request.RouteValues["Reason"]</h5>
        <p class="card-text">There are no additional details associated with this reason code.</p>
    </div>
</div>